<Page
    x:Class="WindowHand.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowHand.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WindowHand.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate DataType="{x:Type models:DashboardCategory}">
            <ui:Button
                Width="220"
                Height="150"
                Margin="8"
                Padding="14"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Appearance="Secondary">
                <StackPanel>
                    <ui:SymbolIcon FontSize="28" Symbol="{Binding IconSymbol, Mode=OneWay}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="{Binding Title, Mode=OneWay}" />
                    <TextBlock
                        Margin="0,4,0,0"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding Description, Mode=OneWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ui:Button>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TabControl Padding="24,16,24,24" ItemsSource="{Binding ViewModel.CategoryGroups, Mode=OneWay}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontWeight="SemiBold" Text="{Binding Title, Mode=OneWay}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding Categories, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </ScrollViewer>
</Page>
